<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <include android:id="@+id/toolbar_header"
        layout="@layout/custom_toolbar"/>


    <!-- content area -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/layoutpadding"
        android:paddingRight="@dimen/layoutpadding"
        android:layout_below="@id/toolbar_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="The password must contain a minimum\nof 8 characters including a lower-case letter,\nan upper-case letter and a number."
                android:textSize="14.4sp"
                android:textColor="#000000"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="34.4dp"
                android:layout_marginTop="49dp"
                android:inputType="textPassword"
                android:id="@+id/ed_password"
                android:hint="Please enter your Password"
                android:text="rudfks79"
                android:textSize="14.4sp"
                android:drawableLeft="@drawable/icon_password_black"
                android:background="@drawable/custom_editview"
                android:drawablePadding="5dp"
                android:textColor="#000000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="#1A000000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="34.4dp"
                android:layout_marginTop="21.3dp"
                android:inputType="textPassword"
                android:id="@+id/ed_password_confirm"
                android:hint="Please enter your password"
                android:text="rudfks79"
                android:textSize="14.4sp"
                android:drawableLeft="@drawable/icon_confirm"
                android:background="@drawable/custom_editview"
                android:drawablePadding="5dp"
                android:textColor="#000000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="#1A000000"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_logins_height"
                android:layout_marginTop="41dp"
                android:id="@+id/btn_finished"
                android:text="Finished"
                android:textColor="#4c3994"
                android:background="@drawable/round_stroke_corner"
                android:textSize="14.4sp"
                style="?android:attr/borderlessButtonStyle"
                android:textAllCaps="false"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_logins_height"
                android:layout_marginTop="9.3dp"
                android:id="@+id/btn_password_login"
                android:text="Log in"
                android:textColor="#999999"
                android:background="@drawable/btn_update_round"
                android:textSize="14.4sp"
                style="?android:attr/borderlessButtonStyle"
                android:textAllCaps="false"/>

        </LinearLayout>



    </RelativeLayout>
    <!-- content area //-->
</RelativeLayout>