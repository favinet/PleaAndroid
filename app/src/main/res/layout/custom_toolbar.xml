<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentTop="true"
    android:background="@color/colorPrimary"
    android:id="@+id/toolbar"
    app:contentInsetStart="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/toolbar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/top_arrow_left"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/top_icon_menu"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_centerVertical="true" />

        <shop.plea.and.ui.view.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_title"
            android:visibility="gone"
            android:textSize="16.3sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text=""
            app:customFont="NotoSans-Regular.ttf"
            android:textColor="@color/colorBackground"
            android:textAllCaps="true"/>

        <ImageButton
            android:id="@+id/btn_toolbar_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/top_icon_logo"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_right_btns"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/btn_toolbar_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/top_icon_search"
                android:background="@android:color/transparent"
                android:visibility="gone"
                android:layout_centerVertical="true"/>

            <ImageButton
                android:id="@+id/btn_toolbar_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/top_icon_notice"
                android:background="@android:color/transparent"
                android:visibility="gone"
                android:layout_centerVertical="true" />

        </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.Toolbar>