<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:layout_alignParentTop="true">

    <include android:id="@+id/toolbar_header"
        layout="@layout/custom_toolbar"/>


    <!-- content area -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/layoutpadding"
        android:paddingRight="@dimen/layoutpadding"
        android:layout_below="@id/toolbar_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <shop.plea.and.ui.view.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="@string/find_password"
                android:textSize="14.4sp"
                android:textColor="#000000"
                app:customFont="NotoSansKR-Light.otf"/>


            <shop.plea.and.ui.view.CustomFontEditView
                android:layout_width="match_parent"
                android:layout_height="34.4dp"
                android:layout_marginTop="41dp"
                android:inputType="textEmailAddress"
                android:id="@+id/ed_email"
                android:hint="@string/edit_email_hint"
                android:text=""
                android:textSize="14.4sp"
                android:drawableLeft="@drawable/icon_email_black"
                android:background="@drawable/custom_editview"
                android:drawablePadding="5dp"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                app:customFontEdit="NotoSansKR-Regular.otf"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="#1A000000"/>

            <shop.plea.and.ui.view.CustomFontBtn
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_logins_height"
                android:layout_marginTop="34dp"
                android:id="@+id/btn_send_password_set_mail"
                android:text="@string/send_email"
                android:textColor="#4c3994"
                android:background="@drawable/round_stroke_corner"
                android:textSize="14.4sp"
                style="?android:attr/borderlessButtonStyle"
                android:textAllCaps="false"
                app:customFontBtn="NotoSansKR-Medium.otf"/>

        </LinearLayout>



    </RelativeLayout>
    <!-- content area //-->
</RelativeLayout>